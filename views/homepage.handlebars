<h1>Homepage View</h1>

<div id="home">
    <div class="contianer">

        <div class="row">
            <div class="col-8 offest-2">
                <h2 id="songTitleScreen">{{msg}}</h2>

                <h3 id="test">Let us know what you think with a like or dislike!</h3>

                <h4 id="yourChoice"></h4>

                <button type="button" class="btn btn-success changeButton">Change Module</button>
                <button type="button" class="btn btn-success logOutButton">Logout</button>

                <h3 style="visibility:hidden">Your favorites:</h3>

                <ul id="example-list" class="list-group-item local-render" style="visibility:hidden">
                    {{#each favoriteSongs}}
                    
                    <li><strong>Song Name: </strong>{{songName}}
                        <br>
                        <strong>Artist: </strong>{{artistName}}
                        <br>
                        <button class="btn delete">ï½˜</button>
                    </li>
                    <br>

                    {{/each}}

                </ul>
            </div>
        </div>

        <div class="modal" id="selectionModal" tabindex="-1" role="dialog">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <h5 class="modal-title">What would you like Spotifind Me to do?</h5>
                    <div class="modal-body">
                        <button type="button" class="btn btn-success selectButton" choice="recommend">Please Recommend a Song!</button>
                        <button type="button" class="btn btn-success selectButton" choice="random">Give me Random Songs!</button>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<script src="./homepage.js"></script>